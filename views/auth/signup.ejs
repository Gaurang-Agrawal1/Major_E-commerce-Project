<% layout('layouts/boilerplate') -%>

<style>
    
    .form-container {
        background: white;
        padding: 2rem;
        border-radius:2px solid black 3rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.95);
    }
    .form-container h1 {
        margin-bottom: 1.5rem;
    }
    .form-check-input {
        margin-right: 0.5rem;
    }
</style>

<div class="form-container col-md-6 mx-auto" >
    <%- include('../partials/flash') %> 
    <h1 class="display-6 text-center" style="font-weight:700 ;">Sign Up</h1>
    <form action="/register" method="post">
        <div class="mb-3">
            <label class="form-label" for="username" style="font-weight:500 ;">Username</label>
            <input class="form-control" type="text" name="username" id="username" placeholder="Username">
        </div>
        <div class="mb-3">
            <label class="form-label" for="email" style="font-weight:500 ;" >Email</label>
            <input class="form-control" type="email" name="email" id="email" placeholder="Email" required>
        </div>
        <div class="mb-3">
            <p class="mb-2"  style="font-weight:500 ;" >Want to register as ? </p>
            <div class="form-check">
                <input class="form-check-input"  style="font-weight:500 ;" type="radio" name="role" value="seller" id="seller">
                <label class="form-check-label"  style="font-weight:500 ;" for="seller">Seller</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="role" value="buyer" id="buyer">
                <label class="form-check-label" for="buyer"  style="font-weight:500 ;">Buyer</label>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="password"  style="font-weight:500 ;">Password</label>
            <input class="form-control" type="password" name="password" id="password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-success btn-block"  style="font-weight:600 ;">Sign Up</button>
    </form>
</div>
<div style="text-align: center;padding:20px;margin-top: 75px;  bottom:30%;background-color:black; color:azure; font-family: Verdana, Geneva, Tahoma, sans-serif; "><h2>MADE WITH LOVE FROM GAURANG ❤❤</h2> </div>